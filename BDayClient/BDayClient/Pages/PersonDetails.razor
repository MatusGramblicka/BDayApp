@page "/person/{personId:guid}"

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <h2>@Person.Name</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                 <img class="person-image" src="@Person.ImageUrl" alt="@Person.Name" />
            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col">
                        <h3 class="person-title">@Person.Surname</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span class="person-description">
                            Date of birthday: @Person.DayOfBirth.ToString("dd.MM.")
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span class="person-description">
                            Date of nameday: @Person.DayOfNameDay.ToString("dd.MM.")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col">
        <a href="/persons" class="btn btn-success">Back</a>
    </div>
</div>