@page "/updatePerson/{id:guid}"

<h2>Update Person Form</h2>

@if (_personForUpdateDto != null)
{

<EditForm EditContext="_editContext" OnValidSubmit="Update" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />

    <div class="form-group row">
        <label for="name" class="col-md-2 col-form-label">Name:</label>
        <div class="col-md-10">
            <InputText id="name" class="form-control" @bind-Value="_personForUpdateDto.Name" />
            <ValidationMessage For="@(() => _personForUpdateDto.Name)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="supplier" class="col-md-2 col-form-label">Surname:</label>
        <div class="col-md-10">
            <InputText id="surname" class="form-control" @bind-Value="_personForUpdateDto.Surname" />
            <ValidationMessage For="@(() => _personForUpdateDto.Surname)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="price" class="col-md-2 col-form-label">BirthDay:</label>
        <div class="col-md-10">
            <InputDate id="birthDay" class="form-control" @bind-Value="_personForUpdateDto.DayOfBirth" />
            <ValidationMessage For="@(() => _personForUpdateDto.DayOfBirth)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="price" class="col-md-2 col-form-label">NameDay:</label>
        <div class="col-md-10">
            <InputDate id="NameDay" class="form-control" @bind-Value="_personForUpdateDto.DayOfNameDay" />
            <ValidationMessage For="@(() => _personForUpdateDto.DayOfNameDay)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="image" class="col-md-2 col-form-label">Image:</label>
        <div class="col-md-10">
            <ImageUpload OnChange="AssignImageUrl" ImgUrl="@_personForUpdateDto.ImageUrl" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success"
                    disabled="@formInvalid">
                Update
            </button>
        </div>
    </div>
</EditForm>
    <br />
    <div class="row">
        <div class="col">
            <a href="/persons" class="btn btn-success">Back</a>
        </div>
    </div>
}